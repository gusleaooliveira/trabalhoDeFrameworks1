doctype html
html(lang="pt-br")
    head
        title Apagar pacote
        meta(charset="utf-8")
        link(rel="stylesheet", href="/static/hcw.min.css")
        script(src="/static/formulario.js")
        script(src="https://kit.fontawesome.com/089953a984.js", crossorigin="anonymous")
    body
        header.padding-16.raisin-black
            h1.text-center Apagar
        
        include menu.pug

        section.margin-10.light-gray
            div.card
                h3.padding-16.raisin-black.text-center Formul√°rio para apagar  categoria
                div.padding-16
                    form(method="post", action="/pacote/", onsubmit="return bloquear()")
                        label(for="id") Selecione qual deseja apagar:
                        select(id="id", name="id", class="input white border-bottom-blue-focus")
                            each item in pacote
                                option(value=item.id) #{item.nome} 

                        br
                        input(type="submit", class="btn btn-block red", onclick="enviar('DELETE', 'pacote')", value="Apagar")


        include ../footer.pug