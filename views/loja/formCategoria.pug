doctype html
html(lang="pt-br")
    head
        title Loja de aplicativos
        meta(charset="utf-8")
        link(rel="stylesheet", href="/static/hcw.min.css")
        link(rel="stylesheet", href="/static/estilo.css")
        script(src="/static/formulario.js")
        script(src="https://kit.fontawesome.com/089953a984.js", crossorigin="anonymous")
    body
        header.padding-16.raisin-black
            h1.text-center Loja de aplicativos
        
        include menu.pug

        section.margin-10.light-gray
            div.card
                h3.padding-16.raisin-black.text-center Destaques

                div.grid.column-3
                    each item in pacote
                        div.card
                            div.img-app.raisin-black
                                p.text-center <i class="fas fa-image"></i> Imagem do aplicativo
                            div.padding-16.text-center
                                a(href='/loja/pacote/'+item.id, class="text-center text-gray text-raisin-black-hover") 
                                    h4 #{item.nome}
                                each cat in item.categorias
                                    a(href="/loja/categoria/"+cat.id, class="text-center text-gray text-raisin-black-hover") #{cat.categoria}
                               
        include ../footer.pug